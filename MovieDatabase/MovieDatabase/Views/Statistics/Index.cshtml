<table border="1">
    <tr>
        <th colspan="2">@Html.Label("Totals")</th>
    </tr>
    <tr>
        <td>Movies</td>
        <td>@Model.NumberOfMovies</td>
    </tr>
    <tr>
        <td>Actors</td>
        <td>@Model.NumberOfActors</td>
    </tr>
</table>